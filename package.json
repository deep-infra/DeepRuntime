{
  "name": "deepruntime-cli",
  "version": "0.1.4",
  "description": "Config-as-Code Agent Runtime Engine for developers",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "deep-run": "./dist/bin/deep-run.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "rslib build --watch",
    "build": "rslib build && npm run postbuild",
    "postbuild": "node scripts/postbuild.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "agent",
    "ai",
    "cli",
    "langchain",
    "mcp",
    "deepseek",
    "ollama",
    "deepagents",
    "config-as-code"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deep-infra/DeepRuntime"
  },
  "homepage": "https://github.com/deep-infra/DeepRuntime#readme",
  "bugs": {
    "url": "https://github.com/deep-infra/DeepRuntime/issues"
  },
  "dependencies": {
    "@langchain/core": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "bundle-require": "^5.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "deepagents": "^0.0.1",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@rslib/core": "^0.3.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
