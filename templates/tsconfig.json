{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // 编译目标
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    // 严格模式
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // 模块解析
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // 输出配置
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    // Node.js 类型
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "deep.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

